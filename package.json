{
  "name": "saha-ui",
  "version": "1.22.9",
  "description": "Ultra-modern React component library built with TypeScript, Tailwind CSS v4, and OKLCH colors",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Saha UI Team",
    "url": "https://saha-ui.isubroto.com.bd"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Xenial-Devil/Saha-ui.git"
  },
  "homepage": "https://saha-ui.isubroto.com.bd",
  "bugs": {
    "url": "https://github.com/Xenial-Devil/Saha-ui/issues"
  },
  "bin": {
    "saha-ui": "./bin/cli.js",
    "saha-ui-mcp": "./bin/mcp.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "bin",
    "mcp",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "keywords": [
    "react",
    "react-components",
    "component-library",
    "ui-components",
    "design-system",
    "tailwind",
    "tailwindcss",
    "tailwind-css",
    "typescript",
    "oklch",
    "glass-morphism",
    "cva",
    "saha-ui",
    "modern-ui",
    "dark-mode",
    "mcp",
    "model-context-protocol",
    "ai-assistant",
    "components",
    "ui",
    "design-system",
    "tailwind",
    "typescript",
    "nextjs",
    "accessibility",
    "a11y",
    "react-components",
    "ui-library",
    "component-library"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build",
    "build:mcp": "vite build",
    "build:legacy": "vite build && vite build --config vite.mcp.config.ts",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:mcp": "node mcp/test-dynamic-features.js",
    "mcp:client": "node test-client.js",
    "mcp:demo": "node demo-mcp.js",
    "mcp:validate": "node validate-mcp-v2.js",
    "prepublishOnly": "npm run build",
    "postinstall": "node -e \"console.log('\\n✨ Saha UI installed! Run: npx saha-ui init\\n✨ MCP Server v2.0 available: npx saha-ui-mcp\\n')\""
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@monaco-editor/react": "^4.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "glob": "^12.0.0",
    "monaco-editor": "^0.54.0",
    "react-resizable-panels": "^3.0.6",
    "rechart": "^0.0.1",
    "recharts": "^3.4.1",
    "tailwind-merge": "^3.4.0"
  },
  "optionalDependencies": {
    "lucide-react": "^0.554.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sass": "^1.94.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4"
  }
}
